<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="a.talenting.com.talenting.custom.domain.detailItem.TitleAndEditTextItem" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@{item.topPadding}"
        android:paddingLeft="@{item.leftPadding}"
        android:paddingRight="@{item.rightPadding}"
        android:paddingBottom="@{item.bottomPadding}"
        android:background="@{item.useBottomLine ? @drawable/border : @drawable/nonborder}">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@{item.title}"
            android:textColor="@{item.titleColor}"
            android:textSize="@{item.titleSize}" />

        <EditText
            android:id="@+id/etValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tvTitle"
            android:text="@{item.editText}"
            android:textAlignment="textEnd"
            android:textColor="@{item.editTextColor}"
            android:textSize="@{item.editTextSize}" />

    </RelativeLayout>
</layout>